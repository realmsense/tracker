{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "paths": {
            "*": ["*"],
            "@realmsense/types": ["./types/src"]
        },
    },
    "include": [
        "src/**/*",
        "src/**/*.json",
        "./types/src"
    ],
    "references": [
        { "path": "./nrelay" }
    ]
}